%\markright{gridbase=\gridbase, gridinterval=\gridinterval\ without move down}%
\newcommand\uklogo[1][32pt]{%
  \begingroup % changes should be local
  \uklogofont
  \def\uksmallfont{\the\dimexpr #1/4\relax}%
  \def\ukbigfont{\the\dimexpr #1/2\relax}%
  \def\ukselect##1{\fontsize{##1}{##1}\selectfont}
  \def\uklogoskip{\the\dimexpr #1/10\relax}%
  %%%%%%%%%%%
  \def\mybox##1##2{\baselineskip=##1\ukselect##1\hbox{##2}\typeout{baseline: \the\baselineskip}}
  \def\logodim{\the\dimexpr#1/10*11\relax}%
  \hbox{%
    \vbox{%
      \hbox{\raisebox{\the\dimexpr #1/20*21\relax}{\rotatebox{270}{\includegraphics[height=\logodim,width=\logodim]{logo-5.mps}}}}
    }%
    \hskip\uklogoskip%
    \vbox{%
      \mybox\uksmallfont{Ústřední}%\\% 
      % zarovnání s ostatními řádky
      \mybox\ukbigfont{\kern-.02em knihovna}%\\%
      % oprava vertikálního zarovnání
      \kern\the\dimexpr #1/10\relax
      \mybox\uksmallfont{PedF UK}
    }%
  }%
  \endgroup
}

\endinput
